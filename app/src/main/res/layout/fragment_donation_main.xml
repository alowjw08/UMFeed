<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.donation.DonationMain">

    <TextView
        android:id="@+id/TVDonationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Food Donation"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVDonationTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Donate now and help others!"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVDonationTitle" />

    <Button
        android:id="@+id/BtnDonateFood"
        android:layout_width="261dp"
        android:layout_height="84dp"
        android:layout_marginTop="72dp"
        android:text="Donate Food"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVDonationTitle2" />

    <Button
        android:id="@+id/BtnFoodBanksAvailable"
        android:layout_width="261dp"
        android:layout_height="84dp"
        android:layout_marginTop="48dp"
        android:text="Food Banks Available"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnDonateFood" />

    <Button
        android:id="@+id/BtnFoodReserved"
        android:layout_width="261dp"
        android:layout_height="84dp"
        android:layout_marginTop="48dp"
        android:text="Food Reserved"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnFoodBanksAvailable" />

</androidx.constraintlayout.widget.ConstraintLayout>