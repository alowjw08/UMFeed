<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbohydrate"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/carbohydrateSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="200"
        app:labelBehavior="floating"
        android:stepSize="5"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/carbRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5g - 65g"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/proteinSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="50"
        app:labelBehavior="floating"
        android:stepSize="5"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/proteinRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5g - 30g"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fats"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/fatsSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="50"
        app:labelBehavior="floating"
        android:stepSize="1"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/fatsRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5g - 20g"
        android:layout_marginBottom="24dp"/>

    <!-- Add switch for matching criteria -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/matchingCriteriaSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match All Criteria"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Help text for matching criteria -->
    <TextView
        android:id="@+id/matchingCriteriaHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recipe must match ANY criteria"
        android:textColor="?android:textColorSecondary"
        android:textSize="12sp"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/applyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply"/>

</LinearLayout>